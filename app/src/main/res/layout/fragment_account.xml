<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:nestedScrollingEnabled="true"
    android:orientation="vertical">

    <!-- Title -->
    <TextView
        android:id="@+id/titleCompanyInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Information Preview"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Address -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siltasaarenkatu 13" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Phone -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="050 3662992" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Email -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info@ravintola14peaks.fi" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Google Map -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google Map:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtGoogleMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="https://maps.app.goo.gl/mgBWanDYz1tQu7j5A"
                android:textColor="@android:color/holo_blue_dark" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Opening Hours -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opening Hours:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtOpeningHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buffet: 11:00 - 15:00
Sunday: 12:00 - 21:00
Monday: 11:00 - 22:00
Tuesday: 11:00 - 22:00
Wednesday: 11:00 - 22:00
Thursday: 11:00 - 22:00
Friday: 11:00 - 22:00
Saturday: 12:00 - 22:00" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Description EN -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description (EN):"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescriptionEN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to our restaurant, where every dish is crafted..." />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Description FI -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description (FI):"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescriptionFI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tervetuloa ravintolaamme, jossa jokainen annos..." />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Closed Dates -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Closed Dates:"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerClosedDates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Add / Edit Button -->
    <Button
        android:id="@+id/btnEditCompanyInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Edit Company Info" />
</LinearLayout>


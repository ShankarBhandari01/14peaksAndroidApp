<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.RotaPredictionApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Transparent system bars for edge-to-edge -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

    </style>

    <style name="NotificationActivityAnimation" parent="@style/Theme.Material3.DayNight.NoActionBar">
        <!-- When opening the activity -->
        <item name="android:windowEnterAnimation">@anim/slide_down</item>

        <!-- When closing the activity -->
        <item name="android:windowExitAnimation">@anim/slide_up</item>
    </style>

</resources>
